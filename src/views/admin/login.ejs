<%- contentFor('title') %>
    LogIn - Funkoshop

    <%- contentFor('main') %>

        <body>

            <main class="container">
                <h1 class="admin__title">Ingresar a mi cuenta</h1>

                
                <form class="formulario" action="/auth/login" method="post">
                    <div>
                      <label for="email">Correo</label>
                      <input
                        type="email"
                        id="email"
                        name="email"
                        value="<%= typeof values != 'undefined' ? values.email : '' %>"
                      />
                    </div>
                    <div>
                      <label for="password">Contrase√±a</label>
                      <input type="password" id="password" name="password" />
                    </div>
                    <button class="item__button" type="submit">Enviar</button>
                  </form>

                <div><button class="item__button">
                        <a href="/admin/productos">ADMIN PRODUCTOS</a>
                    </button></div>
                <div><button class="item__button">
                        <a href="/admin/categorias">ADMIN CATEGORIAS</a>
                    </button></div>



            </main>
        </body>