<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Auth</title>
  </head>
  <body>
    <header>
      <nav class="navbar container">
          <picture class="navbar__logo">
              <a href="./../index.html">
                  <img src="./../../../public/img/branding/logo_light_horizontal.svg" alt="logo">
              </a>
          </picture>

          <ul class="navbar__menu">
              <li class="navbar__item with-submenu">
                  <a class="navbar__link with-icon" href="./shop.html">SHOP<iconify-icon
                          icon="tabler:chevron-down"></iconify-icon></a>
                  <ul class="submenu">
                      <li class="submenu__item">
                          <a href="./shop.html" class="submenu__link">Funkos</a>
                      </li>
                      <li class="submenu__item">
                          <a href="./shop.html" class="submenu__link">Remeras</a>
                      </li>
                      <li class="submenu__item">
                          <a href="./shop.html" class="submenu__link">LLaveros</a>
                      </li>
                  </ul>
              </li>
              <li class="navbar__item">
                  <a class="navbar__link" href="./about.html">CONTACTO</a>
              </li>
              <li class="navbar__item">
                  <a class="navbar__link" href="../auth/login.ejs">LOGIN</a>
              </li>
              <li class="navbar__item">
                  <a class="navbar__cart" href="./cart.html">
                      <img src="../../../public/img/icons/cart-icon.svg" alt=""></a>
              </li>
          </ul>
      </nav>
  </header>
    <main>
      <h1>Login</h1>

      <% if (typeof errors != 'undefined') { %>
      <ul>
        <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
        <% }) %>
      </ul>
      <% } %>

      <form action="/login" method="post">
        <div>
          <label for="email">Correo</label>
          <input
            type="email"
            id="email"
            name="email"
            value="<%= typeof values != 'undefined' ? values.email : '' %>"
          />
        </div>
        <div>
          <label for="password">Contrase√±a</label>
          <input type="password" id="password" name="password" />
        </div>
        <button type="submit">Enviar</button>
      </form>
    </main>
    <%- include('../partials/footer') %>
  </body>
</html>